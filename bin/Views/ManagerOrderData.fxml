<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ManagerOrderDataController">

    <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Sales Report" />

    <TableView fx:id="salesReportTable" prefWidth="600">
        <columns>
            <TableColumn fx:id="waiterNameColumn" prefWidth="200" text="Waiter Name" />
            <TableColumn fx:id="totalSalesColumn" prefWidth="200" text="Total Sales" />
        </columns>
    </TableView>

    <Label fx:id="totalSalesLabel" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Total Sales: 0.0" />

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="backButton" onAction="#Back" text="Back" />
    </HBox>

</VBox>
