<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<GridPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.WaiterScreenController">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" />
        <ColumnConstraints halignment="CENTER" />
    </columnConstraints>
    
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Button fx:id="table1Button" text="Masa 1" onAction="#selectTable1"/>
        <Button fx:id="table2Button" text="Masa 2" onAction="#selectTable2"/>
        <Button fx:id="table3Button" text="Masa 3" onAction="#selectTable3"/>
        <Button fx:id="table4Button" text="Masa 4" onAction="#selectTable4"/>
        <Button fx:id="table5Button" text="Masa 5" onAction="#selectTable5"/>
        <Button fx:id="table6Button" text="Masa 6" onAction="#selectTable6"/>
    </VBox>
    
    <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <TextField fx:id="orderItemsField" promptText="Siparişi girin..." prefWidth="200"/>
        <Button text="Siparişi Ver" onAction="#submitOrder"/>
    </VBox>
</GridPane>